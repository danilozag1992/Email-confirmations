<% if user_signed_in? %>
<div class="contact-form pt-5">
<%= form_for @contact, url: contact_index_path, remote: true do |f| %>
    <div class="form-group">
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.hidden_field :email, value: current_user.email %>
    </div>
    <div class="form-group">
    <%= f.label :message %><br>
    <%= f.text_area :message, rows: 8, cols: 40, required: true, class: "contact-form-text-area form-control",
                    placeholder: "Send me a message"%><br>
    </div>
    <%= f.submit 'Send Message', class: 'btn btn-primary btn-lg btn-block' %>

<% end %>
</div>
<div class="col-md-6" id="flash-message">
  <%= render 'flash' %>
</div>
<% end %>