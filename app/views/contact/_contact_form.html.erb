<% if user_signed_in? %>
<div class="contact-form">
<%= form_for @contact, url: contact_index_path, remote: true do |f| %>
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.hidden_field :email, value: current_user.email %>
    </div>
    <div class="form-group">
    <%= f.label :create %><br>
    <%= f.text_area :create, rows: 8, cols: 40, required: true, class: "contact-form-text-area form-control",
                    placeholder: "Send me a create"%><br>
    </div>
    <%= f.submit 'Send Message', class: 'btn btn-primary btn-lg btn-block' %>

<% end %>
</div>
<% end %>